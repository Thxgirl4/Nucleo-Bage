<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calendário</title>
    <!-- Importar CSS e fontes -->
    <link rel="stylesheet" href="/css/calender.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Menu de Navegação -->
    <section class="navigation-menu">
        <nav class="menu">
            <ul>
                <li><a href="/tutor-e-animais/novo">Cadastros</a></li>
                <li><a href="/tutores/buscar">Procurar</a></li>
                <li><a href="/calendario">Agendamentos</a></li>
            </ul>
        </nav>
        <div class="menu-infos">
            <button class="botao botao-pequeno">Sair</button>
            <div class="icon icon-pequeno">
                <img src="/images/user-icon.png" alt="Ícone de Usuário">
            </div>
        </div>
    </section>
    <div class="calendar">
        <div class="calendar-header">
            <button class="nav-button">&lt;</button>
            <div>December 2024</div>
            <button class="nav-button">&gt;</button>
            <div class="user">
                <button class="nav-button">Sair</button>
                <img src="path-to-user-icon" alt="User  Icon">
            </div>
        </div>
        <div class="calendar-grid">
            <div class="calendar-cell"><strong>Sun</strong></div>
            <div class="calendar-cell"><strong>Mon</strong></div>
            <div class="calendar-cell"><strong>Tue</strong></div>
            <div class="calendar-cell"><strong>Wed</strong></div>
            <div class="calendar-cell"><strong>Thu</strong></div>
            <div class="calendar-cell"><strong>Fri</strong></div>
            <div class="calendar-cell"><strong>Sat</strong></div>
            <% 
                const startDay = new Date(2024, 11, 1).getDay(); // Primeiro dia do mês (0 = Domingo, 1 = Segunda, etc.)
                const daysInMonth = new Date(2024, 12, 0).getDate(); // Total de dias no mês de Dezembro
                for (let i = 0; i < 42; i++) { 
            %>
                <div class="calendar-cell" 
                     <% if (i >= startDay && i < startDay + daysInMonth) { %>
                         onclick="window.location.href='/agendamentos/novo?data=<%= i - startDay + 1 %>-12-2024'" 
                     <% } %>
                >
                    <% if (i >= startDay && i < startDay + daysInMonth) { %>
                        <%= i - startDay +  1 %>
                    <% } %>
                </div>
            <% } %>
        </div>
    </div>
</body>
</html>